<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Management</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <link rel="stylesheet" href="/css/adminStyle.css">
</head>

<body>
    <!-- ======= HEADER ======= -->
    <%- include('./partials/headerAdmin'); -%>

    <!-- ======= BODY ======= -->
    <div class="content">
        <div class="container">
            <!-- PAGINATION -->
            <h1 class="mt-5 mb-3">ADMIN MANAGEMENT</h1>
            <div class="admin-new d-flex justify-content-end mb-2">
                <button id="open" class="btn btn-success bi me-2 mt-2 mb-2 d-flex align-items-center">
                    <ion-icon class="mr-2" name="add-circle-outline"></ion-icon>
                    New
                </button>
            </div>
            <table id="items-table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Admin Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Password</th>
                        <th scope="col">Date Create</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody id="items-body">
                    <tr id="item-1">
                        <th scope="row"></th>
                        <td>Admin123</td>
                        <td>admin123@gmail.com</td>
                        <td>0123456789</td>
                        <td>123456</td>
                        <td>29/5/2024</td>
                        <td>
                            <button class="btn btn-danger" data-toggle="modal" data-target=".deleteAdmin">
                                <ion-icon name="trash-outline"></ion-icon> Delete
                            </button>
                        </td>
                    </tr>

                    <!-- DELETE ADMIN MODAL -->
                    <div class="modal fade deleteAdmin" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title">Delete Admin</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                                
                                <!-- Modal body -->
                                <form action="" method="post">
                                    <div class="modal-body">
                                        <input type="hidden" id="id" name="id" placeholder="" value="">
                                        <h5>Are you sure you want to delete this admin: <strong></strong>?</h5>
                                    </div>
                                    <!-- Modal footer -->
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-success">Yes</button>
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </tbody>
            </table>
            <div class="pagination">
                <button id="prev" onclick="prevPage()">Prev</button>
                <span id="page-info"></span>
                <button id="next" onclick="nextPage()">Next</button>
            </div>
        </div>
    </div>

    <!-- MODAL CREATE -->
    <div id="modal-container">
        <div id="modal" class="dialog-modal">
            <form action="" method="post" enctype="multipart/form-data">
                <div class="form-box">
                    <ion-icon id="close" name="close-circle-outline" class="close text-success mt-3 me-4"></ion-icon>
                    <div>
                        <h2 class="d-flex justify-content-center mb-4">ADD NEW ADMIN</h2>
                    </div>
                    
                    <div class="inputbox">
                        <ion-icon name="person-add-outline"></ion-icon>
                        <input type="text" class="input" id="adminname" name="adminname" required/>
                        <label for="adminname">Admin Name</label>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="mail-outline"></ion-icon>
                        <input type="email" class="input" id="email" name="email" required/>
                        <label for="email">Email</label>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="call-outline"></ion-icon>
                        <input type="tel" class="input" id="phone" name="phone" required/>
                        <label for="phone">Phone Number</label>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input type="password" class="input" id="password" name="password" required/>
                        <label for="password">Password</label>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input type="password" class="input" id="confirm" name="confirm" required/>
                        <label for="confirm">Confirm Password</label>
                    </div>

                    <div class="create d-flex justify-content-center">
                        <button type="submit" class="full-rounded" data-target=".addNewEbook">
                            <span>Submit</span>
                            <div class="border full-rounded"></div>
                        </button>
                    </div>
                </div>
            </form>     
        </div>
    </div>
</body>
<script>
    // OPEN MODAL
    const btn_new = document.getElementById('open');
    const btn_close = document.getElementById('close');
    const modal_container = document.getElementById('modal-container');
    btn_new.addEventListener('click', function() {
        modal_container.classList.add('show');
    })
    btn_close.addEventListener('click', function() {
        modal_container.classList.remove('show');
    })
    
    modal_container.addEventListener('click', (event) => {
        if (event.target === modal_container) {
            modal_container.classList.remove('show');
        }
    });

    // PAGINATION
    const itemsPerPage = 10;
    let currentPage = 1;

    const itemsBody = document.getElementById('items-body');
    const pageInfo = document.getElementById('page-info');
    const prevButton = document.getElementById('prev');
    const nextButton = document.getElementById('next');

    function renderItems() {
        const items = Array.from(document.querySelectorAll('#items-body tr'));
        const totalItems = items.length;
        const totalPages = Math.ceil(totalItems / itemsPerPage);
        const start = (currentPage - 1) * itemsPerPage;
        const end = Math.min(start + itemsPerPage, totalItems);

        items.forEach((item, index) => {
            if (index >= start && index < end) {
                item.style.display = 'table-row'; // Hiển thị mỗi hàng
                item.querySelector('th[scope="row"]').textContent = index + 1; // Cập nhật số thứ tự
            } else {
                item.style.display = 'none'; // Ẩn các hàng không thuộc trang hiện tại
            }
        });

        pageInfo.textContent = `Page ${currentPage} of ${totalPages}`;

        prevButton.disabled = currentPage === 1;
        nextButton.disabled = currentPage === totalPages;
    }

    function prevPage() {
        if (currentPage > 1) {
            currentPage--;
            renderItems();
        }
    }

    function nextPage() {
        const items = Array.from(document.querySelectorAll('#items-body tr'));
        if (currentPage < Math.ceil(items.length / itemsPerPage)) {
            currentPage++;
            renderItems();
        }
    }
    document.addEventListener('DOMContentLoaded', renderItems); 
</script>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detail Popular</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <link rel="stylesheet" href="/css/ebookDetailStyle.css">
</head>

<body>
    <!-- ======= HEADER ======= -->
    <%- include('./partials/header'); %>

    <!-- ======= BODY ======= -->
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-lg-3">
                <img src="/images/background_1.jpg" class="ebook-image" alt="">
            </div>

            <div class="ebook-detail col-lg-9">
                <h1 class="ebook-title"><%= formattedEbookData.title %></h1>
                <hr>
                <table>
                    <tr>
                        <th>Type: </th>
                        <td><a href=""><%= formattedEbookData.type %></a></td>
                    </tr>
                    <tr>
                        <th>Author: </th>
                        <td><a href=""><%= formattedEbookData.author %></a></td>
                    </tr>
                    <tr>
                        <th>Language: </th>
                        <td><a href=""><%= formattedEbookData.language %></a></td>
                    </tr>
                    <tr>
                        <th>Date Posted: </th>
                        <td><%= formattedEbookData.formattedDate %></td>
                    </tr>
                </table>
                <hr>
                <div class="row">
                    <button class="btn btn-download col-lg-4 btn-success" id="btn-download" type="submit">
                        <ion-icon name="cloud-download-outline"></ion-icon>
                        Download
                    </button>
                    <button class="btn btn-review col-lg-4 btn-primary" id="btn-review" type="submit">
                        <ion-icon name="eye-outline"></ion-icon>
                        Review
                    </button>
                </div>

                <div class="ebook-describe">
                    <h3>Description</h3>
                    <span class="text-white">
                        Descibe about the book
                    </span>
                </div>
            </div>
        </div>
    </div>   

    <!-- TASK CONFIRMATION -->
    <div id="task-confirm" class="task-confirm">
        <div class="confirm-content">
            <ion-icon id="close-confirm" name="close-circle-outline" class="close-confirm text-success mt-3 me-4"></ion-icon>
            <p class="text-white">Are you sure you want to perform this action?</p>
            <button class="btn-success w-25" id="btn-yes">OK</button>
            <button class="btn-danger w-25" id="btn-no">Cancel</button>
        </div>
    </div>

    <!-- ======= FOOTER ======= -->
    <%- include('./partials/footer'); %>
</body>

<script>
    // TASK CONFIRMATION
    const task_confirm = document.getElementById('task-confirm');
    const btn_download = document.getElementById('btn-download');
    const update_ebook = document.getElementById('update-ebook');
    const close_confirm = document.getElementById('close-confirm');

    btn_download.onclick = () => {
        task_confirm.style.display = 'block';
    }

    close_confirm.addEventListener('click', function(){
        task_confirm.style.display = "none";
    }) 

    window.onclick = function(event) {
        if (event.target == task_confirm) {
            task_confirm.style.display = "none";
        }
    }

    const btn_yes = document.getElementById('btn-yes');
    const btn_no = document.getElementById('btn-no');

    btn_yes.onclick = function() {
        task_confirm.style.display = "none";
    }

    btn_no.onclick = function() {
        task_confirm.style.display = "none";
    }
</script>

</html>

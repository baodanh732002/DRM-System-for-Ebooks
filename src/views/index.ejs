<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang chủ</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- ======= HEADER ======= -->
    <div class="header">
        <nav class="navbar navbar-expand-lg p-4">
            <div class="container-fluid">
                <div class="navbar-brand">
                    <a class="navbar-brand ps-3 me-0 me-lg-2" href="#">
                        <!-- <img src="/images/logo.png" alt="logo" width="50" /> -->
                        <a href="/" class="logo text-white">DRM-EBOOKS</a>
                    </a>
                </div>  
        
                <div class="collapse navbar-collapse">
                    <form class="d-flex align-items-center w-50" role="search">
                        <input
                            class="form-control me-2 w-100"
                            type="search"
                            placeholder="Nhập tên sách"
                            aria-label="Search"
                            id="charSearch"/>
                        <button class="btn w-auto" type="submit"><ion-icon name="search-circle-outline"></ion-icon></button>
                    </form>
                </div>

                <div class="header-user d-flex pe-5 w-auto">
                    <a href="#" class="me-1">
                        <ion-icon name="person-circle-outline"></ion-icon>
                    </a>
                    <label class="text-white" style="font-size: xx-large;"> | </label>
                    <a href="/logout" class="nav__logout ms-1">
                        <ion-icon name="log-out-outline"></ion-icon>
                    </a>    
                </div>
            </div>
        </nav>
    </div>

    <!-- ======= BODY ======= -->
    <div class="body bg-dark">
        <!-- SIDEBAR -->
        <div class="contain-fluild">
            <div class="row">
                <div class="sidebar col-lg-2 col-md-0 d-flex flex-column flex-shrink-0 p-3 text-white" style="width: 280px;">
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li class="nav-item">
                            <a href="#" class="nav-link" aria-current="page" id="create-ebook" onclick="showCreateDialog()">
                                <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"/></svg>
                                New
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link">
                                <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"/></svg>
                                Yêu thích
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link">
                                <svg class="bi me-2" width="16" height="16"><use xlink:href="#table"/></svg>
                                Lịch sử
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link">
                                <svg class="bi me-2" width="16" height="16"><use xlink:href="#grid"/></svg>
                                Xem gần đây
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link">
                                <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle"/></svg>
                                ...
                            </a>
                        </li>
                    </ul>
                </div>
        
                <!-- DISPLAY -->
                <div class="display col-lg-10 col-md-12">
                    <div class="row mb-3">
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-5">
                            <a href="#">
                                <div class="card">
                                    <img src="/static/img/background.jpg" class="card-img-top" alt="">
                                    <div class="card-body">
                                        <h5 class="card-title text-white">Card title</h5>
                                        <div class="d-flex">
                                            <p class="card-text text-white">Mô tả</p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- DIALOG CREATE -->
    <div >
        <div id="dialog"  class="dialog-modal">
            <div class="form">
                <ion-icon id="close" name="close-circle-outline" class="close mt-3 me-4"></ion-icon>
                <div>
                    <h2 class="mb-4">Tải lên mẫu sách mới</h2>
                </div>
                <input type="hidden" id="nameCurrent" class="form-control" name="currentEbook">
                <div class="book_name"> 
                    <input type="text" class="form-control" name="book_name" id="book_name" placeholder="Tên sách"> <br>
                </div>

                <div class="describe"> 
                    <textarea class="form-control" name="describe" id="describe" placeholder="Mô tả"></textarea> <br>
                </div>

                <div class="book_img"> 
                    <input type="file" class="form-control" name="book_img" id="book_img"> <br>
                </div>
        
                <div id="createDialog">
                    
                </div>
                
                <div class="create"><input type="submit" placeholder="Tạo mới"></input></div>
            </div>
        </div>
    </div>

    <!-- ======= FOOTER ======= -->
    <div class="footer">
        <p class="text-white">FOOTER</p>
    </div>
</body>

<script>
    document.getElementById('create-ebook').addEventListener('click', function() {
        document.getElementById('dialog').style.display = 'block';
    });

    document.getElementById('close').addEventListener('click', function() {
        document.getElementById('dialog').style.display = 'none';
    });

    window.onclick = function(event) {
        var dialog = document.getElementById('dialog');
        if (event.target == dialog) {
            dialog.style.display = "none";
        }
    }
</script>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous">
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <link rel="stylesheet" href="/css/loginStyle.css">
</head>
<body>
    <section class="login-box">
        <div class="form-box" id="loginForm">
            <div class="form-value">
                <form action="/login" method="post">
                    <h2 style="color: white;">Login</h2>
                    <% if (typeof message !== 'undefined') { %>
                        <div class="alert alert-danger" role="alert">
                          <%= message %>
                        </div>
                    <% } %>
                    <% if (typeof success !== 'undefined') { %>
                        <% if (success === 'account_created') { %>
                            <div class="alert alert-success" role="alert">
                              Account created successfully. You can now log in.
                            </div>
                        <% } else if (success === 'password_reset') { %>
                            <div class="alert alert-success" role="alert">
                              Password reset successfully. You can now log in.
                            </div>
                        <% }else if (success === 'change_successful'){ %>
                            <div class="alert alert-success" role="alert">
                             Information change successfully. Please log in again.
                            </div>
                        <%}%>
                    <% } %>  
                    <div class="inputbox mt-4 mb-4">
                        <ion-icon name="mail-outline"></ion-icon>
                        <input type="text" class="input" id="username" name="username" required/>
                        <label for="username">User Name</label>
                    </div>
                    <div class="inputbox mt-4 mb-4">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input type="password" class="input" id="password" name="password" required/>
                        <label for="password">Password</label>
                    </div>
                    <input type="submit" class="submit" value="Log In">
                    <div class="register">
                        <p>Don't have an account? <a href="/register" id="register">Register</a></p>
                        <p><a href="/forgot-password" id="forgot-password">Forgot password?</a></p>
                    </div>
                </form>
            </div>
        </div>
    </section>
</body>
</html>
